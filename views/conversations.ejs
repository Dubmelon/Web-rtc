                <div class="loading">
                    <div class="spinner"></div>
                </div>
            </div>
        </div>

        <!-- Chat Area -->
        <div class="chat-area">
            <div id="chatContent">
                <div class="empty-state">
                    <div class="empty-state-icon">ðŸ’¬</div>
                    <h2>Select a conversation</h2>
